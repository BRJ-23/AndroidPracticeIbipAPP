<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backmetal"
    android:orientation="vertical"
    tools:context=".ibipExtra.ascreen.Main">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Nuggets"
        android:textColor="#ECECEC"
        android:textSize="40dp"
        android:textStyle="bold" />
  </LinearLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="426dp"
      android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:orientation="vertical">

      <Button
          android:id="@+id/calculadora"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="center"
          android:onClick="calculadora"
          android:text="Calculadora" />

      <Button
          android:id="@+id/vistaweb"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="vistaweb"
          android:text="WebView" />

      <Button
          android:id="@+id/button"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="recyclers"
          android:text="RecyclerView"
          android:textColorHint="#7FDCD4" />

      <Button
          android:id="@+id/button2"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="dialogos"
          android:text="Dialogos" />

      <Button
          android:id="@+id/button4"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="listVista"
          android:text="ListView" />

      <Button
          android:id="@+id/button6"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="listacustom"
          android:text="Listview custom" />

      <Button
          android:id="@+id/cicle"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="verCiclo"
          android:text="Ciclo de Vida" />

      <Button
          android:id="@+id/button7"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="pasarDatos"
          android:text="Datos entre Activities" />

      <Button
          android:id="@+id/button11"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="pasarDatosResultado"
          android:text="Datos Entre Activity 2" />

      <Button
          android:id="@+id/button8"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="gridviewcosas"
          android:text="GridView Frutas" />

      <Button
          android:id="@+id/button9"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="botonescolores"
          android:text="GridLayout Botones" />

      <Button
          android:id="@+id/button10"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="picker"
          android:text="Color Picker" />

      <Button
          android:id="@+id/conversorMedidas"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="conversorMedidas"
          android:text="Spinner Conversor" />

      <Button
          android:id="@+id/button13"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="calendarview"
          android:text="Calendar and Video" />

      <Button
          android:id="@+id/button14"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="ciudadEstado"
          android:text="Spinner Ciudad" />

      <Button
          android:id="@+id/button15"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="smsenviar"
          android:text="Enviar SMS" />

      <Button
          android:id="@+id/button16"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="listviewpepe"
          android:text="Listview Inflate PP" />

      <Button
          android:id="@+id/button17"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="spinnerpepe"
          android:text="Spinner Inflate Pepe" />

      <Button
          android:id="@+id/button18"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:backgroundTint="#709C9C"
          android:onClick="listviewguide"
          android:text="Guide: Inflate Adapter" />

      <Button
          android:id="@+id/button19"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:onClick="spinnerpaisito"
          android:text="spinner Pais Bandera" />

      <Button
          android:id="@+id/button20"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:text="Menu OverFlow" />

    </LinearLayout>
  </ScrollView>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/floatingbutton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:layout_marginRight="10dp"
      android:backgroundTint="#9F9F9F"
      android:clickable="true"
      android:contentDescription="TODO"
      app:borderWidth="0dp"
      app:srcCompat="?attr/selectableItemBackground" />

</LinearLayout>
